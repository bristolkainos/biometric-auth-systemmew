# Database Configuration
DB_PASSWORD=secure_password_123
DATABASE_URL=postgresql://biometric_user:secure_password_123@localhost:5432/biometric_auth

# Security Configuration
SECRET_KEY=your-secret-key-here-change-in-production
JWT_SECRET=your-jwt-secret-here-change-in-production

# Environment
ENVIRONMENT=development
DEBUG=true

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Allowed Hosts (comma-separated)
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# Biometric Settings
MIN_BIOMETRIC_METHODS=2
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=30
SESSION_TIMEOUT_HOURS=24

# File Upload Settings
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_TYPES='["jpg","jpeg","png","tiff","bmp"]'

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Email Configuration (optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_TLS=true

# Model Settings
MODEL_PATH=models
FACE_RECOGNITION_TOLERANCE=0.6
FINGERPRINT_MATCH_THRESHOLD=0.8
PALMPRINT_MATCH_THRESHOLD=0.8 